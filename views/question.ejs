                        <thead class="thead-dark">
                          <tr>
                            <th>Question</th>
                            <th>Status</th>
                            <th>Actions</th>
                          </tr>
                        </thead>

                        <!-- Users -->
                        <tbody id="questionTableBody"></tbody>
                      </table>
                    </div>

                    <!-- Enhanced Circular Pagination -->

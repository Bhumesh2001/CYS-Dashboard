                          <option value="chapter2">Chapter2</option>
                        </select>
                      </div>
                    </div>

                    <div class="col-12">
                      <div class="mb-3">
                        <label for="question_" class="form-label"
                          >Qusetion
                          <i
                            class="fa fa-asterisk"
                            aria-hidden="true"
                          ></i></label
                        ><input
                          type="text"
                          placeholder="Enter question"
                          class="form-control"
                          name="question"
                          id="question_"
                          autocomplete="off"
                        />
                      </div>
                    </div>

                    <!-- option -->
                    <div class="col-12">
                      <div class="mb-3">
                        <label
                          for="option_1"
                          class="form-label option-input"
                          data-answer="Answer A"
                          >Option A
                          <i
                            class="fa fa-asterisk"
                            aria-hidden="true"
                          ></i></label
                        ><input
                          type="text"
                          placeholder="Enter option"
                          class="form-control"
                          name="option_1"
                          id="option_1"
                          autocomplete="off"
                        />
                      </div>
                    </div>

                    <div class="col-12">
                      <div class="mb-3">
                        <label
                          for="option_2"
                          class="form-label option-input"
                          data-answer="Answer B"
                          >Option B
                          <i
                            class="fa fa-asterisk"
                            aria-hidden="true"
                          ></i></label
                        ><input
                          type="text"
                          placeholder="Enter option"
                          class="form-control"
                          name="option_2"
                          id="option_2"
                          autocomplete="off"
                        />
                      </div>
                    </div>

                    <div class="col-12">
                      <div class="mb-3">
                        <label
                          for="option_3"
                          class="form-label option-input"
                          data-answer="Answer C"
                          >Option C
                          <i
                            class="fa fa-asterisk"
                            aria-hidden="true"
                          ></i></label
                        ><input
                          type="text"
                          placeholder="Enter option"
                          class="form-control"
                          name="option_3"
                          id="option_3"
                          autocomplete="off"
                        />
                      </div>
                    </div>

                    <div class="col-12">
                      <div class="mb-3">
                        <label
                          for="option_4"
                          class="form-label option-input"
                          data-answer="Answer D"
                          >Option D
                          <i
                            class="fa fa-asterisk"
                            aria-hidden="true"
                          ></i></label
                        ><input
                          type="text"
                          placeholder="Enter option"
                          class="form-control"
                          name="option_4"
                          id="option_4"
                          autocomplete="off"

                    <!-- option -->
                    <div class="col-12">
                      <div class="mb-3">
                        <label
                          for="option_1"
                          class="form-label option-input"
                          data-answer="Answer A"
                          >Option A
                          <i
                            class="fa fa-asterisk"
                            aria-hidden="true"
                          ></i></label
                        ><input
                          type="text"
                          placeholder="Enter option"

                      </div>
                    </div>

                    <!-- Answer Dropdown -->
                    <div class="col-12">
                      <div class="mb-3">
                        <label for="answer" class="form-label"
                          >Correct Answer
                          <i class="fa fa-asterisk" aria-hidden="true"></i
                        ></label>
                        <select
                          class="form-control"
                          id="answer"
                          name="answer"
                          required
                        >
                          <option value="" selected="">
                            Select Correct Answer
                          </option>
                          <option value="a">Option A</option>
                          <option value="b">Option B</option>
                          <option value="c">Option C</option>
                          <option value="d">Option D</option>
                        </select>
                      </div>
                    </div>

                    <div class="col-12">
                      <div class="mb-3">
                        <label for="status" class="form-label"
                          >Status
                          <i
                            class="fa fa-asterisk"
                            aria-hidden="true"
                          ></i></label
                        ><select
                          class="form-select"
                          name="status"
                          id="status"
                          autocomplete="off"
                        >
                          <option value="active">Active</option>
                          <option value="inactive">Inactive</option>
                        </select>
                      </div>
                    </div>
                  </form>

                  <!-- button part -->
                  <div class="text-end d-flex justify-content-end">
                    <!-- submit button -->
                    <button
                      id="submitBtn"
                      type="button"
                      class="btn btn-primary submit-btn"
                      data-title="Create Question"
                    >
                      Submit
                    </button>

                    <!-- loadin button -->
                    <button
                      class="btn btn-primary d-none"
                      type="button"
                      id="loading-btn"
                    >
                      <span
                        class="spinner-border spinner-border-sm"
                        aria-hidden="true"
                      ></span>
                      <span class="visually-hidden" role="status"
                        >Loading...</span
                      >
                    </button>
                  </div>
                </div>

                <!-- edit question -->
                <div class="form-container_ px-4 pb-4 d-none" id="editQuestion">
                  <!-- heading part -->
                  <div class="form-header text-center mb-2">
                    <h1 class="mb-0" id="form-title">Edit Question</h1>
                  </div>

                  <!-- form part -->
                  <form
                    id="_dynamicForm"
                    class="row g-3"
                    enctype="multipart/form-data"
                  >
                    <div class="col-12">
                      <div class="mb-3">
                        <label for="classId" class="form-label"
                          >Class

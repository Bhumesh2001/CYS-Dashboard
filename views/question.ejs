                  <!-- button part -->
                  <div class="text-end d-flex justify-content-end">
                    <!-- submit button -->
                    <button
                      id="editBtn"
                      type="button"
                      class="btn btn-primary submit-btn"
                      data-title="Edit Question"
                    >
                      Submit

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/icons/cys_logo.jpeg" />

    <!-- bootstrap css -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- Include Font Awesome -->
    <link rel="stylesheet" href="/css/all.min.css" />
    <link rel="stylesheet" href="/css/all.css" />
    <link rel="stylesheet" href="/css/fontawesome.css">

    <!-- dashboard2 css -->
    <link rel="stylesheet" href="/css/styless.css" />
  </head>
  <body>
    <!-- header -->
    <header class="header position-sticky px-2 pt-2 pb-0" id="header__">
      <nav class="navbar navbar-expand-lg rounded">
        <div class="container-fluid">
          <!-- Right Section (Logo and Three-Line Button) -->
          <div class="d-flex align-items-center gap-3">
            <!-- Three-Line Button -->
            <button class="btn btn-light border btn-sm" id="toggleButton">
              <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Logo -->
            <img
              src="/assets/icons/cys_logo.jpeg"
              alt="Company Logo"
              class="img-fluid"
              style="height: 35px; width: 35px"
            />
            <!-- Company Name -->
            <span class="text-dark fw-bold">CYS Dashboard</span>
          </div>

          <!-- Left Section (Dark/Light Button and Admin Profile) -->
          <div class="d-flex align-items-center gap-3 ms-auto">
            <!-- Dark/Light Button -->
            <button class="btn btn-secondary rounded-circle dark-light-btn">
              <i class="fas fa-sun"></i>
            </button>

            <!-- Admin Profile -->
            <div class="dropdown">
              <!-- button -->
              <button
                class="btn btn-light rounded-circle profile-btn"
                type="button"
                id="adminDropdown"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <img
                  src="/assets/icons/profile-default.svg"
                  alt="Admin Profile"
                  class="profile-img"
                  draggable="false"
                />
              </button>

              <!-- option -->
              <ul
                class="dropdown-menu dropdown-menu-end"
                aria-labelledby="adminDropdown"
              >
                <li>
                  <a class="dropdown-item" href="/admin/admin_">
                    <i class="fas fa-user-circle"></i> Profile</a
                  >
                </li>
                <li>
                  <a
                    class="dropdown-item"
                    id="setting_id"
                    href="/admin/settings/setting1"
                    ><i class="fas fa-cog"></i> Settings</a
                  >
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" id="logoutButton" href="#"
                    ><i class="fas fa-sign-out-alt"></i> Logout</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main -->
    <main class="main">
      <div class="container-fluid">
        <div class="row">
          <!-- sidebar -->
          <div class="col-xl-2 d-none d-xl-block p-2" id="sidebar__">
            <div class="sidebar-container rounded d-flex flex-column p-3">
              <!-- dashboard -->
              <a
                href="/admin/dashboard"
                class="sidebar-link"
                id="dashboardLink"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fas fa-tachometer-alt"></i>
                  <span>Dashboard</span>
                </div>
              </a>

              <!-- class -->
              <a
                href="/admin/class"
                class="sidebar-link"
                id="class_"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fas fa-chalkboard"></i>
                  <span>Class</span>
                </div>
              </a>

              <!-- subject -->
              <a
                href="/admin/subject"
                class="sidebar-link"
                id="subjects"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fas fa-book-open"></i>
                  <span>Subject</span>
                </div>
              </a>

              <!-- chapter -->
              <a
                href="/admin/chapter"
                class="sidebar-link"
                id="chapterLink"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fas fa-scroll"></i>
                  <span>Chapter</span>
                </div>
              </a>

              <!-- question -->
              <a
                href="/admin/question"
                class="sidebar-link"
                id="questionLink"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fa-solid fa-seal-question"></i>
                  <span>Question</span>
                </div>
              </a>

              <!-- quiz -->
              <a
                href="/admin/quiz"
                class="sidebar-link"
                id="quizLink"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fas fa-question-circle"></i>
                  <span>Quiz</span>
                </div>
              </a>

              <!-- user -->
              <a
                href="/admin/user"
                class="sidebar-link"
                id="userLink"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fas fa-users"></i>
                  <span>User</span>
                </div>
              </a>

              <!-- report -->
              <a
                href="/admin/report"
                class="sidebar-link"
                id="reportLink"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fas fa-chart-bar"></i>
                  <span>Report</span>
                </div>
              </a>

              <!-- admin -->
              <a
                href="/admin/admin_"
                class="sidebar-link"
                id="adminLink"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fa-solid fa-user"></i>
                  <span>Admin</span>
                </div>
              </a>

              <!-- setting -->
              <a
                href="javascript:void(0);"
                class="sidebar-link"
                id="settingsLink"
                draggable="false"
              >
                <div class="sidebar-item">
                  <i class="fa-solid fa-gear"></i>
                  <!-- Settings icon -->
                  <span>Settings</span>
                  <i class="fa-solid fa-chevron-down dropdown-icon"></i>
                </div>
              </a>

              <!-- nested setting -->
              <div class="nested-menu" id="nestedSettingsMenu">
                <a href="/admin/settings/setting1" class="sidebar-link nested-link">
                  <div class="sidebar-item pt-0">
                    <i class="fa-solid fa-user-gear"></i>
                    <!-- Admin settings icon -->
                    <span>Admin Setting</span>
                  </div>
                </a>

                <a href="/admin/settings/setting2" class="sidebar-link nested-link">
                  <div class="sidebar-item">
                    <i class="fa-solid fa-cogs"></i>
                    <!-- App settings icon -->
                    <span>App Setting</span>
                  </div>
                </a>
              </div>
            </div>
          </div>

          <!-- heading, footer and content -->
          <div class="col-xl-10 p-2">
            <div class="content-container rounded px-md-3 px-2">
              <!-- heading -->
              <div
                class="d-flex gap-2 align-items-center rounded mb-2"
                id="heading__"
              >
                <span class="p-2">
                  <a href="/admin/dashboard">
                    <i class="fa-solid fa-house"></i>
                  </a> </span
                >/
                <h6 id="title" class="m-0 p-1">Report</h6>
              </div>

              <!-- main content -->
              <div class="content mb-3">
                <!-- report section -->
                <section class="report_section">
                  <!-- Navigation Buttons -->
                  <div
                    class="d-flex justify-content-between align-items-center button-section"
                    id="report-id"
                  >
                    <button class="btn btn-secondary backButton fw-bold d-none">
                      <i class="fas fa-arrow-left"></i> Back
                    </button>
                    <h5 class="m-0" id="total_report">Total reports 0</h5>
                  </div>

                  <div class="content-section" id="report">
                    <!-- Reports Table -->
                    <div class="table-responsive">
                      <table class="table">
                        <!-- Report Heading -->
                        <thead class="thead-dark">
                          <tr>
                            <th>Name</th>
                            <th>Report Description</th>
                            <th>Date</th>
                            <th>Actions</th>
                          </tr>
                        </thead>

                        <!-- Report Data -->
                        <tbody id="reportTableBody"></tbody>
                      </table>
                    </div>

                    <!-- Enhanced Circular Pagination -->
                    <nav
                      aria-label="Page navigation example"
                      class="pagination-container d-none"
                      draggable="false"
                    >
                      <ul
                        class="pagination justify-content-center pt-3 m-0"
                        id="pagination"
                      >
                        <!-- Previous Button -->
                        <li class="page-item disabled px-1" id="prev-btn">
                          <a
                            draggable="false"
                            class="page-link"
                            href="#"
                            aria-label="Previous"
                            tabindex="-1"
                          >
                            Pre
                          </a>
                        </li>

                        <!-- Dynamic Page Numbers will be appended here -->

                        <!-- Next Button -->
                        <li class="page-item px-2" id="next-btn">
                          <a
                            draggable="false"
                            class="page-link"
                            href="#"
                            aria-label="Next"
                          >
                            Next
                          </a>
                        </li>
                      </ul>
                    </nav>
                  </div>
                </section>
              </div>

              <!-- footer -->
              <div
                class="footer d-flex rounded align-items-center"
                id="footer__"
              >
                <small class="me-auto p-2 m-0">
                  Copyright © 2024 <strong>cys</strong> All rights reserved.
                </small>
                <small class="p-2 m-0">Cys</small>
                <small class="p-2 m-0">Telegram</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Loader -->
    <div id="loader" class="loader_ d-none">
      <i class="fas fa-spinner fa-spin"></i>
    </div>

    <!-- Delete Confirmation Popup -->
    <div class="delete-popup-overlay" id="deletePopup">
      <div class="delete-popup">
        <h2>Are you sure?</h2>
        <p>You are about to delete this item. This action cannot be undone.</p>
        <div
          class="buttons_ d-flex justify-content-center align-items-center gap-2"
        >
          <button class="cancel-btn" id="cancelDelete">Cancel</button>
          <button class="confirm-btn" id="confirmDelete">
            <span class="button-text">Delete</span>
            <span
              class="spinner-border spinner-border-sm d-none"
              role="status"
              aria-hidden="true"
            ></span>
          </button>
        </div>
      </div>
    </div>

    <!-- Notifications will be dynamically inserted -->
    <div class="notifications-container" id="notifications-container"></div>

    <!-- bootstrap js -->
    <script src="/js/bootstrap.bundle.min.js"></script>

    <!-- js file -->
    <script src="/js/script.js"></script>
  </body>
</html>
